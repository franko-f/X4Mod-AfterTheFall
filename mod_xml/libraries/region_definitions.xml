  <region name="atf_90km_asteroid_field_high" density="4.5" rotation="0">
    <boundary class="cylinder">
      <size r="45000" linear="9000" />
    </boundary>
    <falloff>
      <lateral>
        <step position="0.0" value="0.0" />
